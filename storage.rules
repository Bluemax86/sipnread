rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files by default.
    // This is very permissive. For a production application, you should
    // restrict read access if your files are not intended to be public,
    // or ensure that only authenticated users can write sensitive data.
    // Download URLs generated by Firebase SDKs typically include a token
    // that grants read access even if rules require authentication for direct access,
    // but having a general read allow rule can simplify things if all image content is public.
    match /{allPaths=**} {
      allow read;
      // Example: only allow authenticated users to write files.
      allow write: if request.auth != null;
    }
  }
}
